#!/bin/bash
set -e

# Get the directory where this script is located (macFUSE.pkg is bundled here)
SCRIPT_DIR="$(dirname "$0")"

# Get current user (script runs as root during installation)
CURRENT_USER=$(stat -f "%Su" /dev/console)
USER_HOME=$(eval echo ~$CURRENT_USER)
USER_ID=$(id -u "$CURRENT_USER")

# 1. Install macFUSE if not present
if [ ! -d "/Library/Filesystems/macfuse.fs" ]; then
    echo "Installing macFUSE..."
    installer -pkg "${SCRIPT_DIR}/macFUSE.pkg" -target /
fi

# 2. Ensure ~/Applications exists and has correct ownership
mkdir -p "${USER_HOME}/Applications"
chown "$CURRENT_USER" "${USER_HOME}/Applications"

# 3. Create LaunchAgent directory if needed
mkdir -p "${USER_HOME}/Library/LaunchAgents"

# 4. Create LaunchAgent plist
# Use 'open' with the .app bundle so macOS shows "Arco" in Login Items, not the raw binary
cat > "${USER_HOME}/Library/LaunchAgents/com.arcobackup.arco.plist" <<EOF
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.arcobackup.arco</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/open</string>
        <string>-a</string>
        <string>${USER_HOME}/Applications/Arco.app</string>
        <string>--args</string>
        <string>--hidden</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <false/>
</dict>
</plist>
EOF

# 5. Set correct ownership and permissions
chown "$CURRENT_USER" "${USER_HOME}/Library/LaunchAgents/com.arcobackup.arco.plist"
chmod 644 "${USER_HOME}/Library/LaunchAgents/com.arcobackup.arco.plist"

# 6. Load LaunchAgent (start the app)
sudo -u "$CURRENT_USER" launchctl bootstrap "gui/${USER_ID}" \
    "${USER_HOME}/Library/LaunchAgents/com.arcobackup.arco.plist" 2>/dev/null || true

exit 0
