#!/bin/bash
set -e

CURRENT_USER=$(stat -f "%Su" /dev/console)
USER_HOME=$(eval echo ~$CURRENT_USER)
USER_ID=$(id -u "$CURRENT_USER")

# 1. Ensure ~/Applications exists
mkdir -p "${USER_HOME}/Applications"

# 2. Create LaunchAgent
mkdir -p "${USER_HOME}/Library/LaunchAgents"
# Use 'open' with the .app bundle so macOS shows "Arco" in Login Items
cat > "${USER_HOME}/Library/LaunchAgents/com.arcobackup.arco.plist" <<EOF
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.arcobackup.arco</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/open</string>
        <string>-a</string>
        <string>${USER_HOME}/Applications/Arco.app</string>
        <string>--args</string>
        <string>--hidden</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <false/>
</dict>
</plist>
EOF

chmod 644 "${USER_HOME}/Library/LaunchAgents/com.arcobackup.arco.plist"

# 3. Load LaunchAgent (start the app)
launchctl bootstrap "gui/${USER_ID}" \
    "${USER_HOME}/Library/LaunchAgents/com.arcobackup.arco.plist" 2>/dev/null || true

exit 0
