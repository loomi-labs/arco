{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,

    // Report error when not all code paths return a value
    "noImplicitReturns": true,
    // Report errors for fallthrough cases in switch
    "noFallthroughCasesInSwitch": true,
    // Ensure overriding members are marked with override
    "noImplicitOverride": true,
    // Ensure consistent casing in file names
    "forceConsistentCasingInFileNames": true,
    // Report errors for unreachable code
    "allowUnreachableCode": false,
    // Raise error on expressions with implied 'any' type
    "noImplicitAny": true,
    // Enable strict null checks
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
